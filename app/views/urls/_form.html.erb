<%= form_with(model: url) do |form| %>
  <% if url.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(url.errors.count, "error") %> prohibited this url from being saved:</h2>

      <ul>
        <% url.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field w-50">
    <%= form.label :long_url, "Long Url: ", class: "form-label" %>
    <%= form.text_field :long_url, class: "form-control", placeholder: "Enter Your Url Here To Shorten It" %>
    <%= form.submit "Shorten Url", type: 'submit', class: "btn btn-primary mt-2" %>
  </div>

<% end %>
